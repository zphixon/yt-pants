{
    "manifest_version": 2,
    "name": "YT Pants",
    "version": "0.0",
    "icons": {
        "48": "img/icon-48.png"
    },

    "description": "Edits YouTube Shorts URLs to regular YouTube /watch?v=xxx URLs",

    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "img/icon-32.png",
        "default_title": "YT Pants",
        "default_popup": "popup.html"
    }
}
